<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppLogin.Login"
             Title="Login">
    
    <VerticalStackLayout VerticalOptions="Center" Spacing="11" Padding="11">
        <Label 
            Text="Sistema de Lgin"
            HorizontalOptions="Center"/>

        <Label Text="Usuario: " />
        <Entry x:Name="txt_usuario" />

        <Label Text="Senha: " />
        <Entry x:Name="txt_senha" IsPassword="True"/>
        <!-- O entry de cima, coloca para nao ver a senha que o usuario digita -->

        <Button Text="Entrar" 
                Clicked="Button_Clicked"
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
    
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppLogin.Protegida"
             Title="Protegida">
    
    <VerticalStackLayout VerticalOptions="Center" Padding="20" Spacing="20">

        <Border Stroke="White" StrokeThickness="1" Background="Black" Padding="15" Margin="15">
            <VerticalStackLayout>
                <Label Text="Area Protegida"
                       FontSize="Large"
                       HorizontalTextAlignment="Center" />

                <Label x:Name="lbl_boasvindas"
                        HorizontalOptions="Center" />

                <Button Text="Sair"
                        Clicked="Button_Clicked"
                        HorizontalOptions="Center" />

            </VerticalStackLayout>
        </Border>
         
    </VerticalStackLayout>

</ContentPage>